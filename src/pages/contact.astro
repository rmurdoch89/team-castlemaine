---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us | Team Castlemaine">
  <!-- Hero Section -->
  <section class="hero min-h-[40vh] bg-gradient-to-br from-primary to-success text-primary-content">
    <div class="hero-content text-center">
      <div class="max-w-3xl">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 drop-shadow-lg">Contact Us</h1>
        <p class="text-xl md:text-2xl font-semibold">
          Get in Touch
        </p>
      </div>
    </div>
  </section>

  <!-- Introduction -->
  <section class="py-12 px-4 bg-base-100">
    <div class="max-w-3xl mx-auto text-center">
      <p class="text-lg leading-relaxed">
        Have a question about joining a team, the "Castlemaine Play" rotating sports program, or how you can support our mission?
        We'd love to hear from you.
      </p>
      <p class="text-lg leading-relaxed mt-4">
        Reaching out is the first step to joining a community that values kindness, respect, and play without boundaries. Let's get the ball rolling!
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 px-4 bg-base-100">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-3xl font-bold mb-8">Get In Touch</h2>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="bg-primary/10 p-3 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg">Location</h3>
                <p class="text-base-content/70">Castlemaine, Victoria, Australia</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="bg-primary/10 p-3 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg">Email</h3>
                <a href="mailto:info@teamc.com.au" class="link link-primary">info@teamc.com.au</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="bg-primary/10 p-3 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg">Website</h3>
                <a href="https://teamc.com.au" class="link link-primary" target="_blank" rel="noopener">teamc.com.au</a>
              </div>
            </div>
          </div>

          <div class="mt-12">
            <h3 class="text-xl font-bold mb-4">About Team Castlemaine</h3>
            <p class="leading-relaxed opacity-80">
              Team Castlemaine is a not-for-profit sports group established to support the community
              in Castlemaine and regional Victoria. We aren't just about the score on the board; we focus on
              promoting sports and inclusivity to foster connection.
            </p>
            <p class="leading-relaxed mt-4 opacity-80">
              We pride ourselves on being "hyper inclusive"â€”welcoming everyone irrespective of gender, age,
              skill level, background, or socio-economic status. Profits go directly to assisting children
              from disadvantaged backgrounds.
            </p>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <div class="card bg-base-200 shadow-xl">
            <div class="card-body">
              <h2 class="card-title text-2xl mb-4">Send us a Message</h2>
              <form id="contact-form" class="space-y-4" data-form-type="contact">
                <input type="hidden" name="access_key" value="7eafd19c-94f2-4d9e-803d-3be2825845b3" />
                <input type="hidden" name="subject" value="New Contact Form Submission - Team Castlemaine" />
                <input type="hidden" name="from_name" value="Team Castlemaine Website" />

                <div class="form-control">
                  <label class="label" for="contact-name">
                    <span class="label-text">Your Name <span class="text-error">*</span></span>
                  </label>
                  <input
                    type="text"
                    id="contact-name"
                    name="name"
                    placeholder="Full name"
                    class="input input-bordered w-full"
                    required
                    minlength="2"
                    autocomplete="name"
                  />
                </div>

                <div class="form-control">
                  <label class="label" for="contact-email">
                    <span class="label-text">Email Address <span class="text-error">*</span></span>
                  </label>
                  <input
                    type="email"
                    id="contact-email"
                    name="email"
                    placeholder="your@email.com"
                    class="input input-bordered w-full"
                    required
                    autocomplete="email"
                  />
                </div>

                <div class="form-control">
                  <label class="label" for="enquiry-type">
                    <span class="label-text">Subject <span class="text-error">*</span></span>
                  </label>
                  <select id="enquiry-type" name="enquiry_type" class="select select-bordered w-full" required>
                    <option disabled selected value="">What is this about?</option>
                    <option value="general">General Enquiry</option>
                    <option value="hockey">Hockey Registration</option>
                    <option value="merch">Merchandise Order</option>
                    <option value="sponsorship">Sponsorship</option>
                    <option value="volunteering">Volunteering</option>
                    <option value="other">Other</option>
                  </select>
                </div>

                <div class="form-control">
                  <label class="label" for="contact-message">
                    <span class="label-text">Message <span class="text-error">*</span></span>
                  </label>
                  <textarea
                    id="contact-message"
                    name="message"
                    class="textarea textarea-bordered h-32"
                    placeholder="Your message..."
                    required
                    minlength="10"
                  ></textarea>
                </div>

                <button type="submit" class="btn btn-primary w-full" id="contact-submit-btn">
                  <span class="submit-text">Send Message</span>
                  <span class="loading loading-spinner loading-sm hidden"></span>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="py-12 px-4 bg-base-200">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-center mb-8">Quick Links</h2>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/hockey" class="btn btn-outline">Play Hockey</a>
        <a href="/merch" class="btn btn-outline">Order Merch</a>
        <a href="/sponsor" class="btn btn-outline">Sponsor Us</a>
      </div>
    </div>
  </section>

  <script>
    document.addEventListener('astro:page-load', () => {
      const form = document.getElementById('contact-form') as HTMLFormElement;
      if (!form) return;

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const submitBtn = document.getElementById('contact-submit-btn') as HTMLButtonElement;
        const submitText = submitBtn.querySelector('.submit-text') as HTMLElement;
        const spinner = submitBtn.querySelector('.loading') as HTMLElement;

        // Show loading state
        submitBtn.disabled = true;
        submitText.textContent = 'Sending...';
        spinner.classList.remove('hidden');

        // Get form data
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        try {
          const response = await fetch('https://api.web3forms.com/submit', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
          });

          const result = await response.json();

          if (!response.ok || !result.success) {
            throw new Error(result.message || 'Submission failed');
          }

          // Success
          window.showToast('Message sent successfully! We\'ll get back to you soon.', 'success');
          form.reset();
        } catch (error) {
          // Error
          window.showToast('Failed to send message. Please email us directly at info@teamc.com.au', 'error');
          console.error('Form submission error:', error);
        } finally {
          // Reset button state
          submitBtn.disabled = false;
          submitText.textContent = 'Send Message';
          spinner.classList.add('hidden');
        }
      });
    });
  </script>
</Layout>
