---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import Toast from '../components/Toast.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Team Castlemaine | Community Sports Group',
  description = 'Team Castlemaine is a not-for-profit sports group supporting the Castlemaine and regional Victoria community, promoting sports and inclusivity.'
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- SEO Meta Tags -->
    <meta name="keywords" content="community sports, Castlemaine, hockey, Victoria, not-for-profit, inclusive sports" />
    <meta name="author" content="Team Castlemaine" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://teamc.com.au/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://teamc.com.au/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <link rel="icon" type="image/jpeg" href="/logo.jpg" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Navbar -->
    <div class="navbar bg-base-100 shadow-lg sticky top-0 z-50 backdrop-blur-sm bg-base-100/95">
      <div class="navbar-start">
        <div class="dropdown">
          <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
            </svg>
          </div>
          <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
            <li><a href="/">Home</a></li>
            <li><a href="/hockey">Play Hockey</a></li>
            <li><a href="/merch">Order Merch</a></li>
            <li><a href="/sponsor">Sponsor Us</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>
        <a href="/" class="btn btn-ghost text-base md:text-lg lg:text-xl font-bold gap-2 normal-case">
          <img src="/logo.jpg" alt="Castlemaine Choughs" class="h-8 w-8 lg:h-10 lg:w-10 rounded-full" />
          <span class="hidden sm:inline">Team Castlemaine</span>
        </a>
      </div>
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
          <li><a href="/" class="font-medium hover:text-primary transition-colors">Home</a></li>
          <li><a href="/hockey" class="font-medium hover:text-primary transition-colors">Play Hockey</a></li>
          <li><a href="/merch" class="font-medium hover:text-primary transition-colors">Order Merch</a></li>
          <li><a href="/sponsor" class="font-medium hover:text-primary transition-colors">Sponsor Us</a></li>
          <li><a href="/contact" class="font-medium hover:text-primary transition-colors">Contact</a></li>
        </ul>
      </div>
      <div class="navbar-end">
        <a href="/hockey" class="btn btn-primary btn-sm hover:scale-105 transition-transform">Join Us</a>
      </div>
    </div>

    <!-- Main Content -->
    <main class="flex-grow">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="footer footer-center bg-secondary text-secondary-content p-6">
      <nav class="grid grid-flow-col gap-4 text-sm">
        <a href="/hockey" class="link link-hover hover:text-primary transition-colors">Play Hockey</a>
        <a href="/merch" class="link link-hover hover:text-primary transition-colors">Order Merch</a>
        <a href="/sponsor" class="link link-hover hover:text-primary transition-colors">Sponsor Us</a>
        <a href="/contact" class="link link-hover hover:text-primary transition-colors">Contact</a>
      </nav>
      <aside class="text-sm">
        <p><span class="font-semibold">Team Castlemaine</span> • Castlemaine, Victoria</p>
        <p class="text-xs opacity-70 mt-1">© {new Date().getFullYear()} Team Castlemaine. All rights reserved.</p>
      </aside>
    </footer>

    <!-- Toast Notifications -->
    <Toast />
  </body>
</html>
